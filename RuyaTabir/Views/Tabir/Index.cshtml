@model RuyaTabir.Models.api.ChatDto
@{ 
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="dream-container">
    <h1 class="dream-title">Rüya Tabiri</h1>
    <div class="dream-result">
        <label>@ViewBag.Result</label>
    </div>
    <br />
    <button onclick="location.href='/Tabir/YeniRuya'" class="dream-button">Yeni Rüya Tabiri</button>
</div>

<style>
    

    .dream-title {
        color: #1a237e;
        text-align: center;
        font-size: 2.5em;
        margin-bottom: 30px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }

    .dream-result {
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 20px;
        font-size: 1.2em;
        line-height: 1.6;
        color: #333;
        border-left: 5px solid #1a237e;
    }
    .dream-button {
        background: linear-gradient(to right, #1a237e, #3949ab);
        color: white !important;
        padding: 10px 20px;
        border: none;
        border-radius: 25px;
        font-size: 18px;
        cursor: pointer;
        transition: background 0.3s ease;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5);
    }

    .dream-button:hover {
            background: linear-gradient(to right, #3949ab, #1a237e);
            transform: translateY(-2px);
            color: white !important;
    }
</style>


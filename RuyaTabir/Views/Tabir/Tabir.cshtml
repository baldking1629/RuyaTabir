@model RuyaTabir.Models.db.RUYA
@{
    ViewBag.Title = "Tabir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="dream-container">
    <h1 class="dream-title">Rüya Tabiri</h1>
    <form class="form-group">
        <div>
            <label style="font-size: 18px; color: #1a237e;">Rüyanız:</label>
            <br />
        </div>
        <div style="vertical-align">
            @Html.TextAreaFor(m => m.Ruya1, new { @class = "dream-input" })
            @Html.TextAreaFor(m => m.RuyaTabir, new { @class = "dream-input" })
        </div>
        <div style="margin-top:10px">
            <button class="dream-button">Rüyayı tabir et</button>
        </div>
    </form>
</div>

<style>
    .dream-input {
        border: 2px solid #1a237e;
        border-radius: 10px;
        padding: 15px;
        font-size: 16px;
        width: 100%;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    }

    .dream-button {
        background: linear-gradient(to right, #1a237e, #3949ab);
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 25px;
        font-size: 18px;
        cursor: pointer;
        transition: background 0.3s ease;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5);
    }

    .dream-button:hover {
        background: linear-gradient(to right, #3949ab, #1a237e);
        transform: translateY(-2px);
    }
</style>


@model RuyaTabir.Models.db.RUYA
@{
    ViewBag.Title = "Yeni Rüya Tabiri";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="dream-container">
    <h1 class="dream-title">Yeni Rüya Tabiri</h1>
    <form class="form-group" method="post">
        <div style="margin-top:10px">
            
            <div class="dream-result">
                <textarea type="text" rows="5" class="dream-input" name="girdi" placeholder="Rüyanızı giriniz..." required=""></textarea>
            </div>
            
            <br />
        </div>
        <div style="margin-top:10px">
            <button class="dream-button">Rüyayı tabir et</button>
        </div>
    </form>
</div>

<style>
    .dream-title {
        color: #1a237e;
        text-align: center;
        font-size: 2.5em;
        margin-bottom: 30px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }
    .dream-result {
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 20px;
        font-size: 1.2em;
        line-height: 1.6;
        color: #333;
        border-left: 5px solid #1a237e;
    }
    .dream-input {
        border: 2px solid #1a237e;
        border-radius: 10px;
        padding: 15px;
        font-size: 16px;
        width: 100%;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    }

    .dream-button {
        background: linear-gradient(to right, #1a237e, #3949ab);
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 25px;
        font-size: 18px;
        cursor: pointer;
        transition: background 0.3s ease;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5);
    }

    .dream-button:hover {
        background: linear-gradient(to right, #3949ab, #1a237e);
        transform: translateY(-2px);
    }
</style>

